%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

{application, rgpio,
 [
  {description, ""},
  {vsn, "0.1"},
  {registered, []},
  {applications, [
                  kernel,
                  stdlib
                 ]},
  {mod, { rgpio_app, []}},
  {env, [
         %% {PinNo, ReadWriteMode, [Options]}
         %% PinNo         :: 2 .. 27
         %% ReadWriteMode :: in      | out
         %% Options
         %%    edge       :: falling | rising | both     | none
         %%    pull       :: up      | down   | none
         %%    active_low :: true    | false  | undefined
         {gpio, [
                 { 4, in,  [{edge, both}, {pull, down}] },
                 {17, in,  [{edge, both}, {pull, down}] },
                 {18, in,  [{edge, both}, {pull, down}] },
                 {22, in,  [{edge, both}, {pull, down}] },
                 {23, in,  [{edge, both}, {pull, down}] },
                 {24, in,  [{edge, both}, {pull, down}] },
                 {25, out, [{edge, both}, {pull, down}] },
                 {27, out, [{edge, both}, {pull, down}] }
                ]},

         %% your event handler module.
         {pin_event_handlers, []},

         %% driver node node name
         %% c1@ is fixed. change your hostname part of 'raspberrypi'.
         {c_node, c1@raspberrypi},

         %% arduino extend setting.
         {arduino_enable, true},
         {arduino, [{speed, 57600}, {device, "/dev/ttyACM0"}] }
  ]}
 ]}.
